<Window x:Class="OFOS.Admin.FoodItemSummary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OFOS.Admin"
        mc:Ignorable="d"
        Title="FoodItemSummary" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TxtSummary" HorizontalAlignment="Left" Height="336" Margin="10,36,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="772"/>
        <Label Content="Summary" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnSortAscending" Content="Sort Ascending" HorizontalAlignment="Left" Margin="10,377,0,0" VerticalAlignment="Top" Width="89" Click="BtnSortAscending_Click"/>
        <Button x:Name="BtnSortDescending" Content="Sort Descending" HorizontalAlignment="Left" Margin="104,377,0,0" VerticalAlignment="Top" Width="98" Click="BtnSortDescending_Click"/>

    </Grid>
</Window>
